/*
  Message list

  -- Message list bar internal layout and styles
*/

.message-list
    padding 0

    &.disable
        display none

    &.col-md-6
    &.col-md-12
        transition width 0.2s ease-out

    .pagination-box
        text-align center

    .pagination
        margin .5em 0 1em 0

    .pagination > li > a, .pagination > li > span
        border-width 0

    .pagination > li.current
        font-weight bold

    .message
        padding 0.5em .25em
        border-left .25em solid transparent
        //border-bottom 1px solid #e4e4e4
        cursor pointer
        font-size 0.8em

        > a
        > span
          display block
          outline none

          // We use a flexbox display so the message preview takes all the width left
          display flex
          justify-content flex-start
          align-items center

          text-decoration none

        .participants
        .preview
            margin 0.25em 2em 0 1em

        .preview
            flex 1
            margin 0 .75em 0 auto
            overflow hidden
            white-space nowrap
            text-overflow ellipsis
            color mediumcolor // for ellipsis + p

            .title
                color darkcolor
            p
                margin 0
                display inline

        .participants
            width 200px
            color darkcolor
            white-space pre
            overflow hidden
            text-overflow ellipsis

        .title
            margin-top: 0.25em
            min-width 200px
            &:after
                content ' - '

        .hour
            mrgin-left auto
            color darkcolor

        // placeholder until we have images
        .fa-user
        .avatar
        .select
            margin 0
            margin-left: 0.25em
            color #aaa
            background-color white
            font-size 2em
            //border 1px solid #aaa
            border-radius 50%
            box-shadow 0 0 3px #BBB
            width 1em
            height 1em
            text-align center

        //> a:hover
        //> a:focus
            //.fa-user
            //.avatar
                //border-left .25em solid actioncolor
                //background #f4f4f4

      .fav
        color yellow
        display none

      .attach
        display none

    .message:nth-child(2n+1)
       background-color lightcolor
       background linear-gradient(to bottom, #fff 0%, lightcolor 15%, lightcolor 85%, #fff 100%)
    .message.active
       background lightblue

    .message.unseen
      font-weight bold

    .message .flags
        width 3em

    .message.has-attachments .attach
      display inline
      padding 0 .5em

    .message.is-fav .fav
      display inline
      padding 0 .5em

    .message-list-actions
      display flex
      justify-content flex-start
      align-items left

      //.message-list-action
      //  margin 0 1em 0 0

    .message-list-actions + *
        clear both
        margin-top 1em

.message-list.compact
    .message
        padding 1px 0
    .fa-user
    .avatar
        display none

.message
    .fa-paperclip
        display none

    .fa-star
        display none

.message:hover
    border-left .25em solid actioncolor
    background lightorange

.message.active
    border-left .25em solid basecolor

    &:hover
        border-left .25em solid actioncolor

    .select
        height auto
        margin 0
        padding 0

.more-messages
    cursor pointer
