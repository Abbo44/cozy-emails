/*
  Message list

  -- Message list bar internal layout and styles
*/

.message-list
    padding 0

    &.disable
        display none

    &.col-md-6
    &.col-md-12
        transition width 0.2s ease-out

    .pagination-box
        text-align center

    .pagination
        margin .5em 0 1em 0

    .pagination > li > a, .pagination > li > span
        border-width 0

    .pagination > li.current
        font-weight bold

    .message
        border-left .25em solid transparent
        cursor pointer
        font-size 0.8em

        > a
        > span
          padding 0.75em .25em
          display block
          outline none

          // We use a flexbox display so the message preview takes all the width left
          display flex
          justify-content flex-start
          align-items center

          text-decoration none

        input[type="checkbox"]
            width auto
            margin-left 0.3em
            cursor pointer

        .participants
        .preview
            margin 0.25em 2em 0 1em

        .preview
            flex 1
            margin 0.25em .75em 0 auto
            overflow hidden
            white-space nowrap
            text-overflow ellipsis
            color mediumcolor // for ellipsis + p

            .title
                color darkcolor
            p
                margin 0
                display inline

        .participants
            width 200px
            color darkcolor
            white-space pre
            overflow hidden
            text-overflow ellipsis

        .title
            margin-top: 0.25em
            min-width 200px
            &:after
                content ' - '

        .hour
            mrgin-left auto
            color darkcolor

        // placeholder until we have images
        .fa-user
        .avatar
        .select
            margin 0
            margin: -.25em 0
            color #aaa
            font-size 2em
            width 1em
            height 1em
            text-align center

        .select
            display none

      .fav
        color yellow
        display none

      .attach
        display none

    .message:nth-child(2n+1)
       background-color lightcolor
       //background linear-gradient(to bottom, #fff 0%, lightcolor 15%, lightcolor 85%, #fff 100%)
    .message.active
       background lightblue
       border-left .25em solid basecolor

    .message.unseen
      font-weight bold

    .message .flags
        width 3em

    .message.has-attachments .attach
      display inline
      padding 0 .5em

    .message.is-fav .fav
      display inline
      padding 0 .5em

    .message:hover
       border-left .25em solid actioncolor
       background lightorange

    .message:hover
    .message.edited
        .select
             display inherit
        .avatar
        .fa-user
             display none

        .participants
             margin-left 1.4em

    .message-list-actions
      display flex
      justify-content flex-start
      align-items left

      //.message-list-action
      //  margin 0 1em 0 0

    .message-list-actions + *
        clear both
        margin-top 1em

.message-list.compact
    .message > a
    .message > span
        padding 1px 0
    .fa-user
    .avatar
    .select
        font-size 1.5em
        margin 0
        width 1em
        height 1.1em
        margin -.1em 0

.message-list-option:first-child
    display none

.message-list-option

    .btn.btn-default
        font-size: 1em
        transition: color 0.2s ease
        background: none
        box-shadow: none
        border: 0
        color: basecolor

    .btn.btn-default:hover
        color: actioncolor

.message-list-actions

    .btn.btn-default.dropdown-toggle.move
    .btn.btn-default.dropdown-toggle.more
        font-size: 1em
        transition: color 0.2s ease
        background: none
        box-shadow: none
        border: 0
        color: basecolor

    .btn.btn-default.dropdown-toggle.move:hover
    .btn.btn-default.dropdown-toggle.more:hover
        color: actioncolor


.message
    .fa-paperclip
        display none

    .fa-star
        display none

.message:hover
    background lightorange

.message.active

    .select
        height auto
        margin 0
        padding 0

.more-messages
    cursor pointer
