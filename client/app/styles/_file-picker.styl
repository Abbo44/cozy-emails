.file-picker
  .files
    max-height 5em
    overflow auto
    position relative

    .file-item
      margin 0 0 .25em 0
      white-space no-wrap

      a
        cursor pointer

      .mime
        padding 0 .5em 0 0
        line-height 1.5em
        font-size 1.5em
        float left

      .delete
        position absolute
        line-height 2em
        font-size 1em
        right 2em
        cursor pointer

      &:hover .delete
        display inherit

    .attachment-name
      color darkcolor

  .dropzone
    width 20em
    height 2em
    border 2px blue dashed
    border-color basecolor
    cursor pointer

    &:hover
      border-color actioncolor


    i
      padding .5em

  .file-wrapper
    display none
