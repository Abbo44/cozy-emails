.file-picker
  .files
    max-height 5em

    .file-item
      margin 0 0 .25em 0
      white-space no-wrap

      a
        cursor pointer

      .mime
        padding 0 .5em 0 0
        line-height 1.5em
        font-size 1.5em
        float left

      .delete
        position absolute
        line-height 1.5em
        font-size 1.5em
        right 2em
        display none

      &:hover .delete
        display inherit

    .attachment-name
      color darkcolor

  .dropzone
    width 20em
    height 2em
    border 2px blue dashed

    i
      padding .5em

  .file-wrapper
    display none
