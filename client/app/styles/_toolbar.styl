/*
  Toolbar style

  -- toolbar are components that handle actions for their parent context
*/
.toolbar
    white-space nowrap

    .btn
        border      none
        color       basecolor
        text-shadow none
        box-shadow  none

        &:hover
            color actioncolor

    .fa-compress
        transform none

    // FIXME: temporary disable fullscreen button as it is broken and will be
    // fixed in incoming layout PR
    .fa-compress
    .fa-expand
        display none


.dropdown-menu
    for num in (1..10)
        .pusher-{num}
            padding-left num * 20px + 20px
