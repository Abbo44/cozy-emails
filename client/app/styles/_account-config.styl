/*
  Mailbox config / new mailbox form

  -- Form to create or update a mailbox
*/

#mailbox-config
    h3
        color #444
        margin-top 0
        padding-bottom .75em
        border-bottom 1px solid #f4f4f4

    .nav-tabs
        margin-bottom 1em

        li:not(.active) a
            cursor pointer

    button
        margin-left .25em

    .boxes
        max-width 40em
        margin-left 0
        .row
            height 2em
            > *
                padding 0
        .row.edited
            height 2.5em
        .box-action
            cursor pointer

