/*
  Mailbox config / new mailbox form

  -- Form to create or update a mailbox
*/

#mailbox-config
    h3
        color #444
        margin-top 0
        padding-bottom .75em
        border-bottom 1px solid #f4f4f4

    .nav-tabs
        margin-bottom 1em

        li:not(.active) a
            cursor pointer

    button
        margin-left .25em

    .boxes
        max-width 40em
        margin-left 0
        .row
            height 2.2em
            > *
                padding 0
        .row.new
            height 2.5em
        .box-action
            cursor pointer

    .config-title
        margin-bottom 2em
        border-bottom 1px solid #DDD
        color #333
        font-size 1.3em

    .folder-list
        margin-left 1em
        color #333

        .row.box.new
            margin-top 1em

        .row.box.new
            span
                padding 0.5em 0

            label
                padding 0.5em 1em

            .btn
                margin 0 0.5em

                .caret
                    margin 10px 0 0 10px
