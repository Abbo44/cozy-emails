.toasts-container
    position absolute
    width 300px
    bottom 10px
    right 10px
    z-index 150

    .alert
        margin-bottom 10px
        padding 5px

    .progress
        display inline-block
        margin-bottom 0px
        width 272px
        background-color: darkgrey
        position: relative

        .progress-bar-label
            position: absolute
            font-size: 14px
            width: 100%
            height: 100%
            line-height: 20px
            color: #fff
            text-align: center
            background-color: transparent