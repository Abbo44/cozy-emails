.toasts-container
    position absolute
    width 18.75em
    top 0
    bottom .5em
    right 2em
    z-index 150
    transition-property top
    transition-duration .5s
    pointer-events none

    > *
        pointer-events auto
        opacity 1

    .alert
        margin-bottom .5em
        padding .25em

    .progress
        display inline-block
        margin-bottom 0
        width 17em
        background-color darkgrey
        position relative

        .progress-bar-label
            position absolute
            font-size 1em
            width 100%
            height 100%
            line-height 1.25em
            color #fff
            text-align left
            padding-left 4em
            background-color transparent
            overflow hidden
        .progress-bar-label.start
            color #fff
            z-index 2
        .progress-bar-label.end
            color #000
            z-index 1
    .toast-actions
        display none
    .message
        display inline-block
        margin-bottom 0
        width 17em
        position relative

    .autoclose
        opacity 0
        transition opacity 10s

.toasts-container.action-hidden
    top 100%

.toasts-container.has-toasts
    .toast-actions
        display block
        position absolute
        bottom -.5em
        right -2em
        margin-bottom 0
        border-radius .25em .25em 0 0

        .toast-action
            cursor pointer
        .hide-action
            display inherit
        .close-action
            display inherit
        .show-action
            display none

.toasts-container.action-hidden.has-toasts
    .toast-actions
        .hide-action
            display none
        .close-action
            display none
        .show-action
            display inherit
