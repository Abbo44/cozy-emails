/*
  Conversation

  -- List of collapsable message content
*/

.conversation
    padding 1em 10px .5em
    background-color #f5f5f5


    &.enable
        display block

    .conversation-length-msg
        height 2em
        line-height 1.8em
        font-size 1.2em
        background #f4f4f4
        cursor pointer
        border 0
        padding 0 1rem
        a
            color black
        &:hover
            background-color orange

    .conversation-title
        margin 0 0 0.5em 0
        font 20px/1.4 'Maven Pro', sans-serif
        color #444

    .message
        margin 1em 0
        padding 1em 10px .5em
        border 1px solid lightcolor
        border-radius 4px
        box-shadow 0 3px 1px lightcolor
        background-color white

        header
        footer
            font-size .875em

        header
            margin-bottom 1em

        footer
            margin-top 1em
            padding-top .5em
            border-top 1px solid lightcolor

        iframe
            width 100%

        .sender-avatar
            float left
            margin 0 10px 1em 0
            width 40px
            height 40px
            overflow hidden
            border-radius 2px

            img
                max-width 100%
                max-height 100%

        .infos
            position relative
            display flex
            flex-flow row wrap
            border-bottom 1px solid lightcolor

            .addresses
                flex 1 1 55%
                overflow hidden
                text-overflow ellipsis
                white-space nowrap

            .indicators
            .date
                padding-left 10px

            .from
                order 1
            .indicators
                order 2
            .date
                order 3
            .to
                order 4
            .cc
                order 5
            .details
                order 6

        .details
            .popup
                z-index 1
                position absolute
                top 85%
                right 10px
                padding 0.5em 10px
                border 1px solid lightgrey
                border-radius 2px
                background white

            td
                display table-cell
                padding 0.3em
                color darkcolor
                font-size 1em
                vertical-align baseline

            .label
                text-align right
                font-weight normal
                color mediumcolor

            [aria-hidden=true]
                display none

        .label-warning
            display block
            margin-bottom 1em

        .btn-warning
            display inline-block
            margin-left 1em
            vertical-align baseline

        .attachments
            ul
                margin 0
                padding 0

            li
                margin 0.7em 0
                list-style-type none

            i
                display inline-block
                margin-right 0.3em

            img
                display inline-block
                margin-right .35em
                padding .2em
                vertical-align top
                border 1px solid lightcolor
                border-radius 2px


