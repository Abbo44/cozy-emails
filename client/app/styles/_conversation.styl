/*
  Conversation

  -- List of collapsable message content
*/

.conversation

    &.enable
        display block

    h3
        color #444
        margin-top 0
        padding-bottom .5em

        .close-conversation
            cursor pointer
            font-size 1.25em
            margin-right 1em

        .expand
            float right

        .expand
        .close-conversation
            color basecolor
            &:hover
                color actioncolor

    .thread
        padding 0
        border-top 1px solid #f4f4f4

        .message
            padding 0 1rem
            border-bottom 1px solid #e4e4e4
            cursor pointer

            font-size .75em

            background #f4f4f4

            &.active
            &:last-of-type
                background #fafafa

                .preview
                    display block
                .content
                    display block

            &:last-of-type
                cursor default

            .messageToolbox
            .messageNavigation
                margin-bottom 1em
                opacity .3

                .btn-toolbar
                  margin-right .25em

            .messageToolbox:hover
            .messageNavigation:hover
                opacity 1

            .messageToolbox .tool-long
                display none

            .preview
            .content
                margin 0 .25em
                padding .5em
                border 1px solid lightcolor
                border-radius 2px
                background-color white

            .header
                display flex
                justify-content flex-start
                align-items center
            .sender-avatar
                display block
                float left
                margin 0 .5em 0 0
                font-size 2em
                width 2em
                height 2em
                line-height 2em
                color #aaa
                border 1px solid #aaa
            i.sender-avatar
                padding 0 .5em
            .header.compact
                outline none
                display flex
                justify-content flex-start
                align-items center
                .participants
                .subject
                    margin 0 .5em
                    overflow hidden
                    text-overflow ellipsis
                    max-width 33%
                .hour
                    margin-left auto
                    color darkcolor
                .flags
                    width 3em

                .attach
                    display none
                .fav
                    color #FF0
                    display none
                .sender-avatar
                    font-size 2em
                    width 1em
                    height 1em
                    line-height 1em
                    padding 0 2px

            .header.compact.has-attachments .attach
            .header.compact.is-fav .fav
                  display inline
                  padding 0 .5em

            .toggle-active
                position relative
                top 0
                right 0
                align-self flex-start
                margin -5px 0

            .participants
                color darkcolor
                &.receivers
                    color mediumcolor

            .content-action
                background-color lightcolor
                margin .5em 0
                padding .25em

                button
                    margin 0 1em

            .content
                white-space pre-line
                margin 1em 0 0 0
                display none
                width 100%

            .preview
                margin-top 1em
                overflow hidden
                white-space pre-line
                text-overflow ellipsis
                color darkcolor // for ellipsis + p
                font-family "Source Sans Pro"

                p
                    margin 0
                    display inline


            .hour
                margin-left auto
                color darkcolor

            &:hover:not(.active):not(:last-of-type)
                background #f4f4f4

    .full-headers
        display none

    .with-headers
        .full-headers
            display block
