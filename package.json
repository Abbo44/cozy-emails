{
  "name": "cozy-emails",
  "version": "0.6.4",
  "engines": [
    "node = 0.8.x"
  ],
  "description": "Emails client for Cozycloud",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cozy/cozy-emails.git"
  },
  "main": "server.coffee",
  "dependencies": {
    "americano": "0.3.10",
    "americano-cozy": "0.2.10",
    "printit": "0.1.3",
    "async": "^0.9.0",
    "jade": "1.6.0",
    "node-polyglot": "0.4.1",
    "moment": "2.8.2",
    "bluebird": "2.3.2",
    "imap": "0.8.13",
    "uuid": "^1.4.2",
    "mailparser": "0.4.6",
    "iconv": "2.1.4",
    "lodash": "2.4.1",
    "request-json": "0.4.12",
    "fast-json-patch": "0.4.0",
    "nodemailer": "1.3.0",
    "socket.io": "1.1.0",
    "xmldom": "0.1.19",
    "sanitizer": "0.1.2",
    "html-to-text": "0.1.0",
    "multiparty": "4.0.0",
    "sanitize-html": "^1.4.3"
  },
  "standaloneDependencies": {
    "americano-cozy-pouchdb": "see scripts.prestandalone"
  },
  "devDependencies": {
    "should": "4.0.4",
    "mocha": "1.20.1",
    "casperjs": "1.1.0-beta3",
    "request-json": "0.4.11",
    "cozy-fixtures": "1.1.3",
    "coffeelint": "^1.6.0",
    "lorem-ipsum": "1.0.1",
    "chai": "1.9.1",
    "simplesmtp": "0.3.33",
    "dovecot-testing": "0.0.3",
    "coffee-script": "^1.8.0"
  },
  "scripts": {
    "test": "dovecot-testing setup && cake tests",
    "client-test-travis": "COZY_URL=http://localhost:9125/ casperjs test ./client/tests/casper/*/",
    "load-fixtures": "coffee tests/fixtures/generator.coffee 1000 && coffee tests/fixtures/loader.coffee && cozy-fixtures load tests/fixtures",
    "client-test": "COZY_URL=http://localhost:9125/ casperjs test client/tests/casper/*/",
    "start": "node build/server.js",
    "standalone": "RUN_STANDALONE=true node build/server.js",
    "installpouchdb": "npm_config_global=false npm install americano-cozy-pouchdb@0.3.16",
    "prestandalone": "(ls ./node_modules/americano-cozy-pouchdb/ > /dev/null) || npm run installpouchdb",
    "prepublish": "cd client && brunch b && cd .. && cake build"
  },
  "cozy-permissions": {
    "Account": {
      "description": "Manages your email Accounts"
    },
    "MailsSettings": {
      "description": "Store email app settings"
    },
    "Mailbox": {
      "description": "Manage your Imap Mailboxes"
    },
    "Message": {
      "description": "Manages your emails"
    },
    "CozyInstance": {
      "description": "Localize the application with your language"
    },
    "send mail": {
      "description": "Send emails to your contacts"
    },
    "Contact": {
      "description": "Add contact from messages, send messages to contacts"
    }
  },
  "cozy-displayName": "Emails"
}
